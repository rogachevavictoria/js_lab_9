extends layout
block title
    | Index page
block content
    include ./header
    div.w3-center.w3-padding-32
            header
                h3 Add a painting
            section.w3-container
                form(id="new_pic", action="#", method="POST")
                    table.w3-table-all
                        tr
                            td Title:
                            td
                                input.w3-input.w3-light-grey(type="text" id="newPicName" value="")
                        tr
                            td Author:
                            td
                                input.w3-input.w3-white(id="newPicAuthor" type="text" value="")
                        tr
                            td Created:
                            td
                                input.w3-input.w3-light-grey(id="newPicDate" type="text" value="")
                        tr
                            td Description:
                            td
                                input.w3-input.w3-white(id="newPicDescription" type="text" value="")
                        tr
                            td Painting link:
                            td
                                input.w3-input.w3-light-grey(id="newPicImage" type="text" value="")
            footer
                div.w3-bar
                    a.w3-bar-item.w3-deep-orange.w3-button.w3-margin(href='#' class="buttons" id="save" form="new_pic") Save
            .w3-container
                table.w3-table-all
                    thead
                        tr
                            th(datatype="title_name") Title
                            th(datatype="title_author") Author
                            th(datatype="title_money") Year
                            th(datatype="title_in_auction") Bidding status
                            th(datatype="title_begin_price") Starting price
                            th(datatype="title_min_step") Lowest bid
                            th(datatype="title_max_step") Highest bid
                    tbody#mbody
                        for picture in pictures
                            tr
                                td
                                    a(href="/pictures/"+picture["id"])=picture["name"]
                                td #{picture["author"]}
                                td #{picture["date"]}
                                if (picture["inAuction"] == false)
                                    td No
                                    td -
                                    td -
                                    td -
                                else
                                    td Yes
                                    td #{picture["beginning_price"]}
                                    td #{picture["min_step"]}
                                    td #{picture["max_step"]}
            script
                  include ../public/javascripts/pictures.js


